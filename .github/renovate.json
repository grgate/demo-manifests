{
  "extends": ["config:base"],
  "masterIssue": true,
  "semanticCommits": true,
  "enabledManagers": ["kustomize"],
  "separateMinorPatch": true,
  "rebaseStalePrs": true,
  "prConcurrentLimit": 10,
  "prHourlyLimit": 10,
  "kustomize": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPaths": ["apps/e2e/*"],
      "automerge": true,
      "enabled": true,
      "labels": ["ready-to-merge"],
      "ignoreUnstable": true,
      "pinDigests": true,
      "versioning": "docker"
    },
    {
      "matchDatasources": ["docker"],
      "matchPaths": ["apps/production/*"],
      "automerge": true,
      "enabled": true,
      "labels": ["ready-to-merge"],
      "versioning": "semver"
    }
  ]
}


