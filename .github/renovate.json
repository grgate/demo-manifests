{
  "extends": ["config:base"],
  "semanticCommits": "enabled",
  "enabledManagers": ["kustomize"],
  "separateMinorPatch": true,
  "rebaseWhen": "behind-base-branch",
  "prConcurrentLimit": 10,
  "prHourlyLimit": 10,
  "kustomize": {"enabled": true},
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPaths": ["apps/e2e/*"],
      "automerge": true,
      "enabled": true,
      "labels": ["ready-to-merge"],
      "ignoreUnstable": true,
      "pinDigests": true,
      "versioning": "docker"
    },
    {
      "matchDatasources": ["docker"],
      "matchPaths": ["apps/production/*"],
      "automerge": true,
      "enabled": true,
      "labels": ["ready-to-merge"],
      "versioning": "semver"
    }
  ],
  "dependencyDashboard": true
}

